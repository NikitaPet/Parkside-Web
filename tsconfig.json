{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            //
            "@app/*": ["app/*"],
            "@layout/*": ["app/(layout)/*"],
            //
            "@global/*": ["global/*"],
            "@global-hooks/*": ["global/hooks/*"],
            "@global-styles-assets/*": ["global/styles/assets/*"],
            "@global-styles-fonts/*": ["global/styles/fonts/*"],
            //
            "@containers/*": ["containers/*"],
            // "@page-module": ["containers/PageModule"]
            //
            "@modules/*": ["modules/*"],
            //
            "@shared/*": ["shared/*"],
            //
            "@ui/*": ["ui/*"]
        },
        //
        "plugins": [
            { "name": "next" },
            { "name": "typescript-plugin-css-modules" }
            //
        ],
        //
        "jsx": "preserve",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "downlevelIteration": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/ui/Image/Image.tsx"
    ],
    "exclude": ["node_modules"]
}
